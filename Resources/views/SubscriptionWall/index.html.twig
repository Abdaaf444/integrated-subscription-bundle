{% extends 'IntegratedSubscriptionBundle::base.html.twig' %}
{% block body %}

<div id="wrapper-holder">
    <div class="container">
        <div class="content_columns_holder">
            {% if walls is null %}

                <h1>{% trans %}There are no walls{% endtrans %}</h1>

            {% else %}
            <div class="content_column_inner">
                <div class="results">
                    <table class="table table-striped table-hover">
                        <colgroup>
                            <col style="width: 20%"/>
                            <col />
                            <col style="width: 5em" />
                        </colgroup>
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Teaser</th>
                            <th>Disabled</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for data in walls %}
                            <tr>
                                <td>{{ data.name }}</td>
                                <td>{{ data.teaser }}</td>
                                <td>{{ data.disabled }}</td>
                                <td>
                                    <a href="{{ path('integrated_subscription_edit_wall', {'id': data.id}) }}" title="{% trans %}Edit{% endtrans %}"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a href="{{ path('integrated_subscription_delete_wall', {'id': data.id}) }}" title="{% trans %}Delete{% endtrans %}"><span class="glyphicon glyphicon-remove-circle"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
            <a href="{{ path('integrated_subscription_create_wall') }}">{% trans %}Create wall{% endtrans %}</a>
        </div>
    </div>
</div>
{% endblock %}




