{% if blocked is defined and blocked == true %}
    <script>
        $( document ).ready(function() {
            $('#blockedModal').modal({
                keyboard: false,
                backdrop: 'static'
            });
        });
    </script>
    <div class="modal fade" id="blockedModal" tabindex="-1" role="dialog" aria-labelledby="blockedModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="myModalLabel" align="center">Article is blocked</h3>
                </div>
                <div class="modal-body" align="center">
                    <h4>You need a subscription to read this article.</h4>
                </div>

                <div class="modal-footer">
                    <button type="button" onClick="window.location='/'" class="btn btn-default">Go back</button>
                    <button type="button" class="login btn btn-default">Login</button>
                    <button type="button" class="plans btn btn-primary">See plans</button>
                </div>
            </div>
        </div>
    </div>
{% endif %}